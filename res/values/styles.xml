<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 设备信息 -->
    <style name="style_tv_device_info">
        <item name="android:layout_width">90dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>
    
     <style name="style_tv_device_info_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">10dip</item>
           <item name="android:paddingRight">10dip</item>
        <item name="android:textSize">@dimen/font_size_common</item>
    </style>

</resources>