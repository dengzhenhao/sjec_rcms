<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_layout_trans"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dip"
        android:paddingLeft="15dip"
        android:paddingRight="7dip"
        android:paddingTop="7dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    
		<ImageView
                        android:id="@+id/iv_maintain"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:layout_alignParentLeft="true"
                        android:scaleType="fitEnd"
                        android:background="@drawable/icon_sbwx_02" />
		
                    <TextView
                        android:id="@+id/tv_device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_maintain"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:text="device_name"
                        android:textSize="@dimen/font_size_common" />

                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/icon_gcoding" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_device_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="device_num"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/font_size_common" />

                    <TextView
                        android:id="@+id/tv_device_lastmaintain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dip"
                        android:text="上次维保："
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/font_size_common" />
                    
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/cecece" />

</LinearLayout>