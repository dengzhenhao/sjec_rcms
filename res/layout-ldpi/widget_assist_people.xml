<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- 概 要信息 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_border_device_info" >
                </LinearLayout>

                <!-- 概要信息 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_device_info_row"
                    android:background="@drawable/line"
                    android:orientation="horizontal"
                    android:weightSum="12" >

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/color_border_device_info" >
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="12" >

                        <TextView
                            style="@style/style_tv_device_info"
                            android:layout_alignParentLeft="true"
                            android:text="协助人员"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/color_border_device_info" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_border_device_info" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:background="@android:color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/color_border_device_info" >
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="12"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/layout_assist_people"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@android:color/white"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                             android:layout_marginBottom="5dip"
                            android:gravity="center"
                            android:background="@android:color/white"
                            android:orientation="horizontal" >

                            <Button
                                android:id="@+id/btn_invite_assist_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:background="@drawable/frame_app"
                                android:padding="5dip"
                                android:text="邀请协助人员"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_size_common"
                                android:visibility="gone" />
                            
                             <Button
                                android:id="@+id/btn_delete_assist_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/frame_app"
                                android:padding="5dip"
                                android:text="删除选中人员"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_size_common"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btn_confirm_assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/frame_app"
                                android:padding="5dip"
                                android:text="确认协助"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_size_common"
                                android:visibility="gone"  />

                            <Button
                                android:id="@+id/btn_begin_assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/frame_app"
                                android:padding="5dip"
                                android:text="开始处理"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_size_common" 
                                android:visibility="gone"  />

                            <Button
                                android:id="@+id/btn_close_assist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:background="@drawable/frame_app"
                                android:padding="5dip"
                                android:text="扫码关闭"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_size_common" 
                                android:visibility="gone"  />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/color_border_device_info" >
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_border_device_info" >
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>