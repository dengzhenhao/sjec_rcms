<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/selector_common_layout_trans"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="left"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_delete_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_assist_name"
                style="@style/style_tv_device_info"
                android:layout_width="60dip"
                android:text="姓名啊" />

           

            <TextView
                android:id="@+id/tv_assist_staffno"
                style="@style/style_tv_device_info"
                android:layout_width="70dip"
                android:text="1502345" />
            
             <TextView
                android:id="@+id/tv_assist_mobile"
                style="@style/style_tv_device_info"
                android:textColor="@color/color_link"
                android:text="13771781983" />

            <TextView
                android:id="@+id/tv_assist_status"
                style="@style/style_tv_device_info"
                android:layout_width="match_parent"
                android:text="状态啊" />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_border_device_info" >
            </LinearLayout>
        </LinearLayout>

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_border_device_info" >
    </LinearLayout>

</LinearLayout>