<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/widget_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shape_bg_round"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/width_regist_label"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/title_label_loginname"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@null"
                android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_-:"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:shadowColor="#000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="15"
                android:text="13771781983"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />

            <LinearLayout
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#dcdcdc" >
            </LinearLayout>

            <TextView
                android:id="@+id/tv_get_verify_code"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_common_layout_trans"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/tv_time_countdown"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(120s)"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="13dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_border" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/width_regist_label"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/title_label_verify_code"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="number"
                android:paddingLeft="10dip"
                android:shadowColor="#000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="15"
                android:text=""
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_border" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/width_regist_label"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/title_label_password"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_-:"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dip"
                android:password="true"
                android:shadowColor="#000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="15"
                android:text=""
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_border" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/width_regist_label"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="@string/title_label_password_confirm"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()_-:"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dip"
                android:password="true"
                android:shadowColor="#000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="15"
                android:text=""
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:text="已有账号，"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv1"
            android:text="返回登录" />

        <com.websharputil.widget.ThumbImageView
            android:id="@+id/iv_regist"
            android:layout_width="80dip"
            android:layout_height="36dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_register_2"
            android:padding="0dip"
            android:text="注册"
            android:textColor="#fff" />
    </RelativeLayout>

</LinearLayout>